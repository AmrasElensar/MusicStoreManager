@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <html>
    <head>
        <meta charset="UTF-8">
        <meta name="description" content="">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link href="~/css/GenreDropDown.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/style.css">
        <link rel="stylesheet" href="~/css/ui.css">
        <link rel="stylesheet" href="~/css/search.css">

    </head>
    <body>
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="lds-ellipsis">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

            <header class="header-area">
                <div class="oneMusic-main-menu">
                    <div class="classy-nav-container breakpoint-off">
                        <div class="container">
                            <nav class="classy-navbar justify-content-between" id="oneMusicNav">
                                <a asp-controller="Home" asp-action="Index" class="nav-brand"><img src="~/images/MusicStoreLogo.png" alt=""></a>
                                <div class="classy-navbar-toggler">
                                    <span class="navbarToggler"><span></span><span></span><span></span></span>
                                </div>
                                <div class="classy-menu">
                                    <div class="classycloseIcon">
                                        <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                                    </div>
                                    <div class="classynav">
                                        <ul>
                                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                            <li><a asp-controller="Album" asp-action="List">Albums</a></li>
                                            <li><a asp-controller="Feedback" asp-action="Index">Feedback</a></li>
                                            <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                                        </ul>

                                        <div class="login-register-cart-button d-flex align-items-center">
                                            <div class="login-register-btn mr-50">
                                                <partial name="_loginPartial" />
                                            </div>
                                        </div>

                                        <div class="login-register-cart-button d-flex align-items-center">
                                            <div class="cart-btn">
                                                @await Component.InvokeAsync("ShoppingCartsummary")
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>


        @RenderBody()


        <footer class="footer-area">
            <div class="container">
                <div class="row d-flex flex-wrap align-items-center">
                    <div class="col-12 col-md-6">
                        <p class="copywrite-text">
                            <a asp-controller="Home" asp-action="Index"><img src="~/images/MusicStoreLogo.png" height="75" width="75" alt=""></a>

                            Made in &copy;
                            <script>document.write(new Date().getFullYear());</script> This site uses template elements from <i class="fa fa-heart" aria-hidden="true"></i><a href="https://colorlib.com" target="_blank">Colorlib</a>

                        </p>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="footer-nav">
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a asp-controller="Album" asp-action="List" asp-route-genre=""></a></li>
                                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>


        <script src="~/js/jquery/jquery-2.2.4.min.js"></script>
        <script src="~/js/bootstrap/popper.min.js"></script>
        <script src="~/js/bootstrap/bootstrap.min.js"></script>
        <script src="~/js/plugins/plugins.js"></script>
        <script src="~/js/active.js"></script>
        <script src="~/js/mustache.js/mustache.js"></script>
        <script src="~/js/AlbumLoader.js" type="text/javascript"></script>
        <script src="~/js/filterMenu.js"></script>

        @RenderSection("scripts", required: false)

    </body>
</html>
